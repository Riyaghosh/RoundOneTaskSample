<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/_10sdp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/txt_card_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/img_card_item1"
                android:text="EMPTINESS FT JUSTIN TIBLEKAR"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/txt_card_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_item2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/img_card_item1"
                android:src="@drawable/about_us"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txt_card_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_item2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@+id/txt_card_item3"
                android:text="18 HOUR AGO"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_card_item5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_card_item4"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_toRightOf="@+id/img_card_item1"
                android:singleLine="true"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                android:textSize="@dimen/_13sdp" />

            <ImageView
                android:id="@+id/img_card_item1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>